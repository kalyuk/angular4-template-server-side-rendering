{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "core-js"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}